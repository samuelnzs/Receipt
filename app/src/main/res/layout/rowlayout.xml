<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/receipt_image" />

        <TextView
            android:id="@+id/lblSupplierName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/imgReceipt"
            android:text="Stoned and Co"
            android:textSize="24dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblReceiptId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_toEndOf="@id/imgReceipt"
            android:layout_below="@id/lblSupplierName"
            android:text="#ASGf5678"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/lbldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblReceiptId"
            android:layout_marginStart="155dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@id/imgReceipt"
            android:inputType="date"
            android:text="11/2/2021" />

        <TextView
            android:id="@+id/lbltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblReceiptId"
            android:paddingLeft="10dp"
            android:layout_marginTop="55dp"
            android:layout_toEndOf="@id/lbldate"
            android:inputType="time"
            android:text="11:29" />

        <TextView
            android:id="@+id/current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Pending" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>